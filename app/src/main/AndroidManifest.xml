<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.the.instacopy">

    <uses-permission android:userName="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:userName="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>


        <activity android:userName=".MainActivity">
        </activity>
        <activity android:userName=".SplashActivity" >
            <intent-filter>
                <action android:userName="android.intent.action.MAIN" />

                <category android:userName="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:userName=".LoginActivity">

        </activity>

        <activity android:userName="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:userName="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:userName="android.intent.action.VIEW" />
                <category android:userName="android.intent.category.DEFAULT" />
                <category android:userName="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>

    </application>

</manifest>